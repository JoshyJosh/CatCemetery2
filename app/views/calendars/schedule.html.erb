<h1>Schedule for <%= @date %></h1>

<%= link_to "Calendar", calendars_path %>

<table>
	<thead>
		<tr>
			<th>Hour</th>
			<th>Reserved</th>
		</tr>
	</thead>
	<tbody>
		<% @daily_schedule.each do |hour| %>
		<tr>
			<td><%= hour[:time] %></td>
			<td>
				<% if hour[:reservable] == true %>
					<%= button_to('Reserve', 
												action: "create", 
											  :calendar => {:res_date => hour[:reservation_details]}) %>
				<% else %>
					Reserved
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
